<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <EditText
       android:id="@+id/category"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="12sp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginHorizontal="20sp"
       android:hint="Kategoriya nomini yozing"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rangalr"
        android:layout_marginTop="10sp"
        android:gravity="center_vertical"
        android:paddingHorizontal="40sp"
        app:layout_constraintTop_toBottomOf="@id/category">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/qora"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="#252A31"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/blue"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="#006CFF"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:id="@+id/fioletuvy"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="#B678FF"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sariq"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="#FFE761"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/red"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="#F45E6D"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/yashil"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="#61DEA4"/>




    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addd"
        android:layout_width="60dp"
        android:layout_height="30sp"
        android:background="#B9E49A"
        android:text="add"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/rangalr"
        android:layout_marginBottom="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/containtere"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addd"/>






</androidx.constraintlayout.widget.ConstraintLayout>